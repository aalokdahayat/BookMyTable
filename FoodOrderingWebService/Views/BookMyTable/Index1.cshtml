
@{
    ViewBag.Title = "Index";
}
<link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<!-- Compiled and minified CSS -->

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-alpha.3/css/materialize.min.css">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-alpha.3/js/materialize.min.js"></script>




<h2>Book My Table</h2>
<style>

</style>



<div ng-controller="BookMyTableCtrl">

    <div class="search-wrapper">
        <input id="search" placeholder="Search"><i class="material-icons">Search</i>

    </div>

    <br />

    <ul class="collapsible popout">
        <li ng-repeat="item in records">
            <div>
                <b> Hotel Name : </b>{{item.HotelName }}  <b>
                    Hotel Address:
                </b>{{item.Address}},{{item.City}},{{item.Country }}
                <b> Opening Hours:</b>{{item.OpenintHours}}
                <br />
                <ul class="collection">
                    <li class="collection-item avatar">
                       
                        <img src="https://taj.tajhotels.com/content/dam/luxury/hotels/Taj_Mahal_Delhi/images/4x3/HotelFacade4x3.jpg" alt="" class="circle">
                        <p>
                            <span style="color:green;font-weight:500">Reamining Table : {{item.TableAvailable}}</span><br />
                            <span style="color:red;font-weight:500">Total Reserved Table :</span>

                        </p>

                        <br />
                        <button class="secondary-content btn waves-effect waves-light" type="button" ng-click="openFoodpopup(item.id)" name="action">
                            Book Table
                        </button>
                    </li>
                </ul>
            </div>


        </li>
    </ul>
    <!-- Modal Structure -->
    <!-- Modal Structure -->
    <div id="modal1" class="modal modal-fixed-footer">
        <div class="modal-content">
            <h4>{{HotelName}}</h4>
            <ul class="collection">
                <li class="collection-item avatar" ng-repeat="mitem in HotelDetails">
                    <label>
                        <input type="checkbox" />
                        <span>Red</span>
                    </label>
                    <img src="https://fthmb.tqn.com/BnhRd--KfTMy5_ioMi02O7fKXB0=/1280x860/filters:fill(auto,1)/5276421343_3dfb4a9b37_o-56a510525f9b58b7d0dabe3e.jpg" alt="" class="circle">
                                 <p>{{mitem.MenuName}}<br>
                             {{mitem.MenuDescription}}<br /> Price:${{mitem.Price}}
                      
                    </p>
                    <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
                   
                </li>
               
            </ul>

        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat" ng-click="closeFoodpopup()">Cancel</a>
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat" ng-click="BookMytableAndDish()">Book</a>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $('.collapsible').collapsible();
      
    });

</script>